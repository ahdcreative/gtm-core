{
  "name": "@ahdcreative/gtm-core",
  "version": "1.0.0",
  "description": "A framework-agnostic TypeScript core for Google Tag Manager integration.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "check": "biome check .",
    "fix": "biome check --write .",
    "prepare": "npm run build"
  },
  "keywords": [
    "google-tag-manager",
    "gtm",
    "framework-agnostic"
  ],
  "author": {
    "name": "AHDCreative",
    "url": "https://ahd-creative.agency"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ahdcreative/gtm-core.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "cspell": "^9.6.4",
    "jsdom": "^28.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
